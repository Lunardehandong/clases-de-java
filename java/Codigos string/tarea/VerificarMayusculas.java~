import java.util.Scanner;

public class VerificarMayusculas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Escribe tu nombre en mayusculas: ");
        String nombre = scanner.nextLine();
        if(nombre.indexof(nombre..toUpperCase()){
          System.out.println("Tu nombre esta bien escrito");
        }else{
          System.out.println("Tu nombre no esta bien escrito");
        }
        
    }
}